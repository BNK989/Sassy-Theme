      },
      {
        "type": "color",
        "id": "background-to-gradient",
        "default": "#121212",
        "label": "background gradient color",
        "info": "select background color gradient"
      }
    ],
   "presets": [
      {
        "name": "Announcement bar (BNK)"
      }
   ]
  }
{% endschema %}