  {
    "name": "Announcement bar (BNK)",
    "class": "bnk-announcement-bar",
    "settings": [
      {
        "type": "paragraph",
        "content": "This section shows only in collection and product templates."
      },
      {
        "type": "header",
        "content": "Announcement 1"
      },
      {
        "type": "html",
        "id": "text1",
        "label": "Announcement 1 text"
      },
      {
        "type": "url",
        "id": "link1",
        "label": "Announcement 1 link"
      },
      {
        "type": "header",
        "content": "Announcement 2"
      },
      {
        "type": "html",
        "id": "text2",
        "label": "Announcement 2 text"
      },
      {
        "type": "url",
        "id": "link2",
        "label": "Announcement 2 link"
      },
      {
        "type": "header",
        "content": "Announcement 3"
      },
      {
        "type": "html",
        "id": "text3",
        "label": "Announcement 3 text"
      },
      {
        "type": "url",
        "id": "link3",
        "label": "Announcement 3 link"
      },
      {
        "type": "header",
        "content": "Design"
      },
      {
        "type": "color",
        "id": "background-color",
        "default": "#121212",
        "label": "background color",
